<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UploadFeesInformationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:elevation="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Fees Info Here"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_below="@id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lavender_borders"
    android:padding="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="23dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/uploadimg"
        android:id="@+id/uploadImage_fee"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_fee"
        android:layout_gravity="center"
        android:indeterminateTint="@color/lavender"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/uploadCaption_fee"
            android:layout_weight="0.6"
            android:background="@drawable/lavender_borders"
            android:padding="3dp"
            android:hint="@string/caption"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadButton_fee"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/lavender"
            android:src="@drawable/sendmsg"
            app:tint = "#fff"/>
    </LinearLayout>
</LinearLayout>


</RelativeLayout>