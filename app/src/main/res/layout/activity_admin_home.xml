<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminHomeActivity">

    <!--Admin resource-->

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:title="@string/app_name"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/cardview_light_background"
        android:background="@color/lavender"/>

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/drawer"
        tools:openDrawer="start"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:background="@drawable/photo5"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="-10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pppp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/studnet_welcome"
                        android:textColor="#ffff"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/admin_home_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserName"
                        android:textColor="#ffff"
                        android:textSize="14dp"/>

                    <ImageView
                        android:id="@+id/LanA"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/translate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ll1">


                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/admin_show_gk"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#51a6ff">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/gkstud"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gk"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/admin_show_books"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#ff5b69">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/librarystud"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/student_library"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/admin_show_student_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#feb05b">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/idcardstud"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/TeacherStudnets"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/admin_show_teachers_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#b490fe">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/idtech"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/student_teachers"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/admin_show_calendar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#ff69b0">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/caledarstud"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/student_calendar"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/admin_show_fees"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#3bbdcd">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/feesstud"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/student_fees"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>




            </LinearLayout>





        </LinearLayout>



        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:itemTextAppearance="@style/DrawerTheme"
            app:theme="@style/DrawerTheme"
            android:id="@+id/navmenu"
            app:menu="@menu/admin_menu"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/navheader"
            android:backgroundTint="#ffffff"
            app:itemBackground="@drawable/nav_item_background"
            app:itemTextColor="@color/lavender"
            app:itemIconTint="@color/lavender"
            android:layout_gravity="start"/>



    </androidx.drawerlayout.widget.DrawerLayout>




</RelativeLayout>