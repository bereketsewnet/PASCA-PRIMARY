<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/white_background"
tools:context=".UploadTActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_teacher_profile_here"
            android:layout_gravity="center"
            android:textSize="45dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_below="@id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lavender_borders2"
    android:padding="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="23dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:src="@drawable/uploadimg"
        android:id="@+id/uploadImaget"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:scaleType="fitXY"/>
    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/progressBart"
        android:layout_gravity="center"
        android:indeterminateTint="@color/lavender"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="400dp"

        android:orientation="horizontal"
        android:background="@drawable/white_background">
        <EditText
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/uploadCaptiont"
            android:layout_weight="0.6"
            android:background="@drawable/lavender_borders2"
            android:padding="3dp"
            android:hint="@string/caption"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            app:fabSize="auto"
            app:fabCustomSize="100dp"
            android:id="@+id/uploadButtont"
            android:backgroundTint="@color/lavender"
            android:src="@drawable/sendmsg"
            app:tint = "#fff"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="50dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_user_menu" />

</RelativeLayout>