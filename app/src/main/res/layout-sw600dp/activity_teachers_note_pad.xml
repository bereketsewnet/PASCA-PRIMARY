<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg"
    android:gravity="center"
    tools:context=".TeachersNotePadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/make_your_note"
                android:layout_gravity="center"
                android:textSize="45sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>



            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="25dp"
                android:id="@+id/notepad_edittext"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/notepad_common_btn"
                android:text="@string/common_message"
                android:textSize="30dp"
                android:background="@drawable/btn_back"
                android:textColor="@android:color/white"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"
                android:textSize="30dp"
                android:id="@+id/notepad_edittext_btn"
                android:text="@string/copy"
                android:background="@drawable/btn_back"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="35dp"
                android:id="@+id/notepad_multi_btn"
                android:text="@string/multi_message"
                android:textSize="30dp"
                android:background="@drawable/btn_back"
                android:textColor="@android:color/white"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>