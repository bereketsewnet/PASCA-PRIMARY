<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BulkRegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="20dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multi_register"
                android:layout_gravity="center"
                android:textSize="50sp"
                android:layout_margin="30dp"
                android:textStyle="bold"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/student_start_number"
                android:digits="1234567890"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textSize="50dp"
                android:layout_marginBottom="25dp"
                android:inputType="number"
                android:id="@+id/getnumber_start"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/student_end_number"
                android:digits="1234567890"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textSize="50dp"
                android:layout_marginBottom="25dp"
                android:inputType="number"
                android:id="@+id/getnumber"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="25dp"
                android:textSize="35dp"
                android:id="@+id/register_from"
                android:text="@string/get_started"
                android:background="@drawable/btn_back"
                android:textColor="@android:color/white"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>


